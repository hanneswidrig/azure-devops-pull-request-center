{
  "name": "azure-pull-request-hub",
  "version": "0.0.1",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.15",
    "@rehooks/local-storage": "^2.4.3",
    "immer": "^9.0.6",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-app-polyfill": "^2.0.0",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.5",
    "react-scripts": "^4.0.3",
    "react-select": "^5.1.0",
    "redux": "^4.1.1",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "cross-env HTTPS=true react-scripts start",
    "build": "cross-env NODE_ENV=production BUILD_PATH=./dist react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "redux-devtools": "redux-devtools --hostname=localhost --port=8000",
    "package-release": "npm run build && npm run clean && tfx extension create --root ./ --output-path ./azure-devops-pull-request-center.vsix",
    "package-dev": "npm run build && npm run clean && tfx extension create --root ./ --output-path ./azure-devops-pull-request-center-develop.vsix --manifest-globs ./vss-extension.json --overrides-file ./vss-extension.dev.json --share-with hannes-widrig",
    "clean": "rimraf dist/",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write src/"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(azure-devops-ui|office-ui-fabric-react|react|react-dom)/)"
    ]
  },
  "devDependencies": {
    "@redux-devtools/cli": "^1.0.0-7",
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.19",
    "@types/react-router-dom": "^5.3.1",
    "@types/redux-mock-store": "^1.0.2",
    "@types/remote-redux-devtools": "^0.5.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@typescript-eslint/typescript-estree": "^4.33.0",
    "azure-devops-extension-api": "1.153.2",
    "azure-devops-extension-sdk": "^2.0.11",
    "azure-devops-ui": "^1.160.4",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "office-ui-fabric-react": "^7.123.4",
    "prettier": "^2.4.1",
    "react-test-renderer": "^17.0.2",
    "redux-mock-store": "^1.5.4",
    "remote-redux-devtools": "0.5.0",
    "rename-webpack-plugin": "^2.0.0",
    "rimraf": "^3.0.2",
    "tfx-cli": "^0.7.11",
    "typescript": "^4.4.3"
  }
}
